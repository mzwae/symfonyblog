{% extends 'base.html.twig' %}

{% block title %}SymphBlog Posts{% endblock %}

{% block body %}
  <h1>Posts</h1>
 {% if posts %}
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Post title</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        {% for post in posts %}
          <tr>
            <td>{{ post.title }}</td>
            <td>
              <a href="post/{{post.id}}" class="btn btn-dark">Show</a>
              <a href="#" class="btn btn-danger" data-id="{{post.id}}">Delete</a>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>

 {% else %}
    <p>No posts to display!</p>
 {% endif %}

{% endblock %}
